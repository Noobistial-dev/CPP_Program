#include <iostream>
using namespace std;

int main() {
    int n;

    // Ask user for array size
    cout << "Enter the number of elements in the array: ";
    cin >> n;

    int arr[n]; // Declare array of size n

    // Input elements
    cout << "Enter " << n << " elements:\n";
    for (int i = 0; i < n; i++) {
        cout << "Element " << i + 1 << ": ";
        cin >> arr[i];
    }

    // Display elements
    cout << "\nThe elements of the array are:\n";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    cout << endl;
    return 0;
}
